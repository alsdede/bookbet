{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      // This needs to be mirrored in babel.config.js
      // Components is a directory with sub directories
      "_components/*": ["src/components/*"],
      "_screens/*": ["src/screens/*"],
      "_navigation/*": ["src/navigation/*"],
      "_theme/*": ["src/styles/*"],
      "_src/*": ["src/*"]
    }
  }
}
